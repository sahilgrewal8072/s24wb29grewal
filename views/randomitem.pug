extends layout

block content
  h1= title
  - var image_names = ['img1.jpg', 'img2.jpg', 'img3.jpg', 'img4.jpg', 'img5.jpg']
  - for (var i = 0; i < 3; i++) {
    - var randomIdx = Math.floor(Math.random() * 5)
    img(src=`/images/${image_names[randomIdx]}`, alt=`${image_names[randomIdx]}`, height="300", width="300")
  - }